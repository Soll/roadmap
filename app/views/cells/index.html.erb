<div class="container">
    <h5>
        <%= cur_year = ""
            if (params[:selectedYear]) 
              cur_year = params[:selectedYear]
            else
              cur_year = Time.current.year
            end
            
            cur_year
        %>
    </h5>
    
    <% counter = 1   
    
      for n in (1..4) %>
      <div class="mainview">
       
      <% for n in (1..3) %>
        <% if (@cells.map{|a| a.month}.include? counter) %>
          <div class="card_holder">
            <div class="card text-white bg-primary">
              <div class="card-body ">
                <h5 class="text-white"><%= set_month_by_number(counter) %></h5>
                <h6 class="text-white">Поездок: 12</h6>
                <h6 class="text-white">Километраж: 854 км</h6>
                <h6 class="text-white">Компенсация: 3568 руб</h6>
                <div class="right-handed">
                  <button type="button" class="btn btn-outline-primary good-button">Подробнее...</button>
                </div>
              </div>
            </div>
          </div>
        <% else%>
          <div class="card_holder">
            <div class="card text-black bg-light full-height border-dot">
              <div class="card-body ">
                <h5><%= set_month_by_number(counter) %></h5>    
                <div class="centered">
                  <%= button_to 'Создать', cells_create_path,
                                           class: 'btn btn-primary',
                                           params: {
                                           year: cur_year, month: counter
                                           }
                  %>
                </div>      
              </div>
            </div>
          </div>
        <% end %>  
        
      <% counter += 1 
        end %>
      
      </div>
    <% end %>
    
    

